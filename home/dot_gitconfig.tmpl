[user]
  name  = {{ .name }}
  email = {{ .email }}

[core]
  editor       = nano
  autocrlf     = input
  hooksPath    = .githooks
  excludesFile = ~/.gitignore_global

[init]
  defaultBranch = main

[push]
  default         = current
  autoSetupRemote = true

[pull]
  rebase = false

[merge]
  ff = false

[diff]
  colorMoved = zebra

[alias]
  st  = status
  co  = checkout
  br  = branch
  lg  = log --oneline --graph --decorate --all
  undo = reset --soft HEAD~1

[credential]
  helper = store
